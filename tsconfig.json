{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "paths": {
      "@/*": ["app/src/*"]
    },
    "allowJs": true,
    "baseUrl": "./"
  },
  "exclude": ["config/webpack/*", "node_modules", "app/dist", "app/log", "spec"]
}
